<p id="notice"><%= notice %></p>

<h3>
  <%= @paper.title %>
</h3>
<p>
  <i class="fa fa-user"></i> <%= @paper.author_name %>
  <i class="fa fa-eye"></i> <%= @paper.views_count %>
  <i class="fa fa-link"></i> <%= @paper.original_link %>
</p>

<div class="paper-content"><%= markdown(@paper.content) %></div>

<%= link_to 'Edit', edit_paper_path(@paper) %> |
<%= link_to 'Back', papers_path %> |
<%= link_to 'Destroy', @paper, method: :delete, data: { confirm: 'Are you sure?' } %>
