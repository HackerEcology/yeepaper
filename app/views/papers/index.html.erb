<p id="notice"><%= notice %></p>

<h1>Listing Papers</h1>

<table>
  <thead>
    <tr>
      <th>论文标题</th>
      <th>原文作者</th>
      <th>原文链接</th>
      <th>查看人数</th>
      <th>论文内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @papers.each do |paper| %>
      <tr>
        <td><%= paper.title %></td>
        <td><%= paper.author_name %></td>
        <td><%= paper.original_link %></td>
        <td><%= paper.views_count.to_i if paper.views_count %></td>
        <td><%= markdown(paper.content) %></td>
        <td><%= link_to 'Show', paper %></td>
        <td><%= link_to 'Edit', edit_paper_path(paper) %></td>
        <td><%= link_to 'Destroy', paper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

